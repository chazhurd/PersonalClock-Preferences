<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Clock Preferences">

    </PreferenceCategory>
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="24hour_checkbox"
        android:summary="Military Vs Civilian"
        android:title="@string/twentyfour" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="Smooth_checkbox"
        android:summary="Tick-Tock Vs hmhmhm"
        android:title="@string/Smooth" />
    <ListPreference
        android:entries="@array/ClockFaceNumerals"
        android:entryValues="@array/ClockFaceNumeralsValue"
        android:key="ClockFaceNumerals"
        android:summary="Preference = %s"
        android:title="@string/Numerals" />
    <EditTextPreference
        android:inputType="number"
        android:key="updateInterval"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="100"
        android:title="@string/Update" />
</PreferenceScreen>